<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="과목 추가">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <!-- //end 타이틀바 -->
    <!-- Notice -->
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수업 입력 :"/>
            <EditText
                android:id="@+id/TextSubject"
                android:alpha="0.87"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/TextHour"
                android:textSize="10sp"
                android:text="     "
                android:textColor="#000000"
                android:alpha="0.87"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:ems="3"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시" />
            <EditText
                android:id="@+id/TextMin"
                android:textSize="10sp"
                android:text="      "
                android:textColor="#000000"
                android:alpha="0.87"
                android:inputType="number"
                android:gravity="center"
                android:ems="3"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                />
            <EditText
                android:id="@+id/TextHour2"
                android:textSize="10sp"
                android:text="     "
                android:textColor="#000000"
                android:alpha="0.87"
                android:gravity="center"
                android:ems="3"
                android:inputType="number"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시" />
            <EditText
                android:id="@+id/TextMin2"
                android:textSize="10sp"
                android:text=""
                android:textColor="#000000"
                android:alpha="0.87"
                android:gravity="center"
                android:ems="3"
                android:inputType="number"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진동모드 자동 변경" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/selector1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/item_dialog_selector"
                android:layout_weight="1"
                android:state_selected="true"
                android:text="월" />
            <Button
                android:id="@+id/selector2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/item_dialog_selector"
                android:layout_weight="1"
                android:text="화" />
            <Button
                android:id="@+id/selector3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/item_dialog_selector"
                android:layout_weight="1"
                android:text="수" />
            <Button
                android:id="@+id/selector4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_dialog_selector"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="목" />
            <Button
                android:id="@+id/selector5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_dialog_selector"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="금" />
        </LinearLayout>
    </LinearLayout>
    <!-- Notice -->
    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:text="확인"
            android:textSize="15sp"
            android:padding="16dp"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#ffffff"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="15sp" />
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>